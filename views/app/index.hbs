<div>
    <form action="/">
        <input type="submit" value="Logout" />
    </form>
</div>
<section class="container">
        <aside>
            <ul>
                <li><a href="/book/new">Add</a></li>
                <li><a href="/post/new">Share</a></li>
                <br>
                <li><a href="/post/view">Comments</a></li>

            </ul>
        </aside>
<div class="row">
    {{#if books}}   
        <div class="books">
            {{#each books}}
            <div class="card-content">
                <div class="card">
                    <h2 class="title">
                        {{ title }}
                    </h2>
                    <div class="author">
                        by {{ author }}
                    </div>
                    <div class="subtopic">
                        {{ subtopic }}
                    </div>
                    <div class="description">
                        {{ description }}
                    </div>
                     <div class="comment">
                        {{ comment }}
                    </div>
                    <div class="buttons">
                        <p>
                            <label>Purchased:</label>
                            {{#if complete}}
                            <input type="checkbox" name="complete" id="complete" checked/>
                            {{else}}
                            <input type="checkbox" name="complete" id="complete"/>
                            {{/if}}
                        </p>
                        <div>
                            <form method="GET" action="/book/edit/{{id}}" class="Book-form">
                                <input type="submit" value='Update' class='btn-book'>
                            </form>
                            <form method="POST" action="/book/{{id}}?_method=DELETE" class="Book-form">
                                <input type="submit" value='Delete' class='btn-book'>
                            </form>
                        </div>
                    </div>
                    <div class="date">
                    Item added {{ createdAt }}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    {{/if}}
</div>