<div class="row">
<div class="form-container">
	<i class="fas fa-book-open fa-2x"></i>
	<h2>Enter new book</h2>
	<form action="/book" method="POST" class="book-form">
		<p class="input-field">
			<textarea name="book[title]" cols="70" rows="2" placeholder="Title"></textarea>
		</p>
		<p class="input-field">
			<textarea name="book[author]" cols="70" rows="2" placeholder="Author"></textarea>
		</p>
		<p class="input-field">   
			<textarea name="book[subtopic]" cols="70" rows="2" placeholder="Subtopic"></textarea>
		</p>
		<p class="input-field">
			<textarea name="book[description]" cols="70" rows="4" placeholder="Description"></textarea>
		</p>
		<p class="input-field">
			<textarea name="book[comments]" cols="70" rows="6" placeholder="Comments"></textarea>
		</p>
		<p class='input-field'>
			<input type="submit" value='Submit' class='btn'>
		</p>
	</form>
</div>
</div>